<resources>

    <style name="Widget.ProgressBar.PullToRefresh" parent="SmoothProgressBar">
        <item name="android:minHeight">@dimen/ptr_progress_bar_stroke_width</item>
    </style>

    <style name="Theme.SmoothProgressBarDefaults" parent="android:Theme">
        <item name="spbStyle">@style/SmoothProgressBar</item>
    </style>

    <style name="SmoothProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="spb_color">@color/spb_default_color</item>
        <item name="spb_sections_count">@integer/spb_default_sections_count</item>
        <item name="spb_speed">@string/spb_default_speed</item>
        <item name="spb_stroke_width">@dimen/spb_default_stroke_width</item>
        <item name="spb_stroke_separator_length">@dimen/spb_default_stroke_separator_length</item>
        <item name="spb_reversed">@bool/spb_default_reversed</item>
        <item name="spb_mirror_mode">@bool/spb_default_mirror_mode</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- The theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- <item name="android:actionBarStyle">@style/MyActionBar</item> -->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="AppTheme">
        <item name="android:background">@drawable/main_bg2</item>
    </style>

    <!-- Customized progress bar -->
    <style name="CustomProgressStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:minWidth">100dip</item>
        <item name="android:maxWidth">100dip</item>
        <item name="android:minHeight">100dip</item>
        <item name="android:maxHeight">100dip</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- STYLE FROM PLAYCARD -->
    <style name="WeListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/button_transparent</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="ListSubItemTitle">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TransparentButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_transparent</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textSize">@dimen/card_primary_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SecondaryText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/card_secondary_text_size</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="PrimaryTextDark">
        <item name="android:textSize">@dimen/card_primary_text_size</item>
        <item name="android:textColor">@color/primary_text_black</item>
    </style>

    <style name="SecondaryTextDark" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/card_secondary_text_size</item>
        <item name="android:textColor">@color/secondary_text_black</item>
    </style>

    <style name="PrimaryTextLime">
        <item name="android:textSize">@dimen/card_primary_text_size</item>
        <item name="android:textColor">@color/lime_dark</item>
    </style>

    <style name="SecondaryTextLime" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/card_secondary_text_size</item>
        <item name="android:textColor">@color/lime_dark</item>
    </style>
    
    <!-- THEME FROM SAVIER -->
    <style name="Theme.Savier" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- <item name="android:windowBackground">@color/background_gray</item> -->
        <item name="android:actionBarStyle">@style/savierActionBar</item>
    </style>

    <style name="savierActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar</item>
    </style>
    
    <!-- Overlay the actionbar to make it transparent -->
    <style name="Theme.Scan" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    

</resources>